@using Microsoft.AspNetCore.Identity

@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "All Roles";
}

<h1>All roles</h1>

<br /> 
<a asp-action="Create" asp-controller="Role" class="btn btn-primary">Create new Role</a>
<br /> 
<br /> 
@if(Model.Count() > 0)
{
    <table class="table table-bordered border-primary">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(r => r.Id)</th>
                <th>@Html.DisplayNameFor(r => r.Name)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>

                    <td>@role.Name</td>
                    
                    <td>
                        <a asp-action="Details" asp-route-id="@role.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>

                    <td>
                        <a asp-action="Update" asp-route-id="@role.Id" class="btn btn-success">
                            <i class="fas fa-edit"></i> Update
                        </a>
                    </td>

                    <td>
                        <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
    
}
else
{
    <h2>the is no roles here</h2>
}