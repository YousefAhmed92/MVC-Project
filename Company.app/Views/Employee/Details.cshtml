@model EmployeeDto
@{
    ViewData["Title"] = "Details";
}
<h2>Employee Details </h2>
<br />
@*  <br @{
    var departments = new SelectList(ViewBag.Departments, nameof(Department.Id), nameof(Department.Name));
} *@
<form asp-action="Create" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" readonly />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Address"></label>
        <input type="text" asp-for="Address" class="form-control"  readonly/>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Salary"></label>
        <input type="text" asp-for="Salary" class="form-control" readonly />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Email"></label>
        <input type="email" asp-for="Email" class="form-control" readonly />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label class="col-form-label" asp-for="PhoneNumber"></label>
        <input type="text" asp-for="PhoneNumber" class="form-control" readonly />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="HiringDate"></label>
        <input type="date" asp-for="HiringDate" class="form-control" readonly />
        <span asp-validation-for="HiringDate" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label class="col-form-label">Department</label>
        @{
            var departments = (IEnumerable<DepartmentDto>)ViewBag.Departments;
            var department = departments.FirstOrDefault(d => d.Id == Model.DepartmentId);
            <input type="text" class="form-control" value="@department?.Name" readonly />
        }
    </div>


    <div class="form-group">
        <label class="col-form-label" asp-for="Image"></label>
        <img src="~/Files/Images/@Model.ImageUrl" alt="Employee Image" class="img-fluid" width="250" height="250" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

      <a asp-action="Index" class="btn btn-link">Back</a>
</form>
