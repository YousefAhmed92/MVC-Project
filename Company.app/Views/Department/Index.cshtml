@model IEnumerable<DepartmentDto>

@{
    ViewData["Title"] = "Index";
}
<a asp-controller="Department" asp-action="Create" class="btn btn-info ">create new department</a>

<br />

@* 
<div mt-5 alert alert-danger>
    <h2>@TempData["temp"]</h2>
</div> *@




@if(Model.Count() > 0)
{
    <table class="table table-bordered border-primary">
        <thead>
        <tr>
            <th>@Html.DisplayNameFor(d => d.Name)</th>
            <th>@Html.DisplayNameFor(d => d.Code)</th>
            <th>@Html.DisplayNameFor(d => d.CreatedAt)</th>
            <th>details</th>
            <th>Update</th>
            <th>delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                    <td>@department.Name</td>
                    <td>@department.Code</td>
                    <td>@department.CreatedAt</td>

                    <td>
                        <a asp-action="Details" asp-route-id="@department.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i>details
                        </a>
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@department.Id" class="btn btn-success">
                            <i class="fas fa-edit"></i>Update
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@department.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i>Delete
                        </a>
                    </td>
            </tr>

        }
    </tbody>

    </table>
}
else
{
    <h2>there is no departments</h2>
}