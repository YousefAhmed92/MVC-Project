@model IEnumerable<Department>

@{
    ViewData["Title"] = "Index";
}

@if(Model.Count() > 0)
{
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(d => d.Code)</th>
            <th>@Html.DisplayNameFor(d => d.Name)</th>
            <th>@Html.DisplayNameFor(d => d.CreatedAt)</th>
            <th>details</th>
            <th>update</th>
            <th>delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>item.Code</td>
                <td>item.Name</td>
                <td>item.CreatedAt</td>
                <td>
                        <a asp-action="Details" asp-route-id="department.Id" class="btn btn-group">
                            <i class="fas fa-eye"></i>details
                        </a>
                </td>
                    <td>
                        <a asp-action="Update" asp-route-id="department.Id" class="btn btn-group">
                            <i class="fas fa-edit"></i>Update
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="department.Id" class="btn btn-group">
                            <i class="fas fa-trash"></i>Delete
                        </a>
                    </td>

            </tr>

        }
    </tbody>

    </table>
}
else
{
    <h2>there is no departments</h2>
}