@model DepartmentDto
@{
    ViewData["Title"] = "Create";
}

<h2>Creating New Department</h2>
<br />

<form asp-action="Create" method="post">

    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Code"></label>
        <input type="text" asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>


    <input type="submit" value="Create" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-link">Back</a>
</form>

